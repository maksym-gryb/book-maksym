    "version": "0.2.0",
    "configurations": [
        // API
        {
            "name": "API",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/api/target/debug/api",
            "args": [],
            "cwd": "${workspaceFolder}"
        },

        // UI
        {
            "name": "UI",
            "request": "launch",
            "command": "npm run dev",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node-terminal",
            "cwd":"${workspaceFolder}/ui"
        },
    ],
    "compounds": [
        {
            "name": "ALL",
            "configurations": [
                "API",
                "UI"
            ]
        }
    ]
}